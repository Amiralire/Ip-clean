echo -e "\e[1;36m
╔════════════════════════════════════════════╗
║         Welcome to the ISP Panel          ║
╠════════════════════════════════════════════╣
║    🌐 IP Range Scanner - Subnet Monitor    ║
╚════════════════════════════════════════════╝
\e[0m"

echo -e "\e[1;33m[+] Target IP Range:\e[0m 45.12.54.0/24"
echo -e "\e[1;34m[!] Scanning for active IPs... Please wait.\e[0m"
echo ""

for i in {1..254}; do
  ip="45.12.54.$i"
  timeout 1 bash -c "ping -c 1 $ip &>/dev/null"
  if [ $? -eq 0 ]; then
    echo -e "\e[1;32m[✔] Active:\e[0m $ip"
  else
    echo -e "\e[1;31m[✘] Inactive:\e[0m $ip"
  fi
done

echo -e "\n\e[1;36m════════════════════════════════════════════"
echo -e "✅ Scan Complete. Above are the results."
echo -e "════════════════════════════════════════════\e[0m"
